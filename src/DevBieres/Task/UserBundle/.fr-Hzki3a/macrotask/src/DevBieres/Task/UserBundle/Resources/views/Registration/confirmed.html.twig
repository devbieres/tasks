{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div id="confirm" class="formulaire_connexion" >
      <h2> 
              {{ 'site.title'|trans }} 
      </h2>
      <div class="formulaire_connexion_content" >
           <h3>
              {{ 'registration.confirmed'|trans({'%username%': user.username}, 'FOSUserBundle') }}
           </h3>
           <p>
             {{ 'user.message_confirmation'|trans }}
           </p>
      </div>
      <div class="formulaire_connexion_footer" >
           <a href="{{ path('fos_user_security_login') }} " >
                    <img src="{{ asset('bundles/devbierestaskuser/images/back.png') }}" 
                                  alt="{{ 'user.title_register'|trans }}"
                    />
                   {{ 'user.title_connect'|trans }}
           </a>
      </div>
    </div>
{% endblock fos_user_content %}
