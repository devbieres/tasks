<!DOCTYPE html>
<html>
    <head>
      <meta charset="UTF-8" />
      <title>{% block title %} {{ 'site.title'|trans }} {% endblock %} </title>
       <link href="{{ asset('bundles/devbierescommonjquerymobile/css/jquery.mobile-1.2.0-rc.2.css') }}" type="text/css" rel="stylesheet" />
       <link href="{{ asset('bundles/devbierestaskmobile/css/task.css') }}" type="text/css" rel="stylesheet" />
       {% block css %}
       {% endblock %}
       <script src="{{ asset('bundles/devbierescommonjquerymobile/js/jquery-1.8.1.min.js') }}" type="text/javascript" ></script>
       <script src="{{ asset('bundles/devbierescommonjquerymobile/js/jquery.mobile-1.2.0-rc.2.min.js') }}" type="text/javascript" ></script>
       <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
       <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
       {% block js %}
       <script src="{{ asset('bundles/devbierestaskmobile/js/mobile.tache.task.js') }}" type="text/javascript" ></script>
       {% endblock %}
       <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
      
      {% block flash %}
      <div class="flash" >
          <ul>
          {% for flashMessage in app.session.flashbag.get('flash') %}
          <li> {{ flashMessage }} </li>
          {% endfor %}
        </ul>
      </div>
      {% endblock %}

    {% block page %}
    {% endblock %}

    </body>
</html>

