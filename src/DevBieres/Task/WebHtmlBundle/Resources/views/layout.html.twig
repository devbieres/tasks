         <li> <a href="{{ path('web_tache_somenew') }}" id="nav_newmultitask" > <img src="{{ asset('bundles/devbierestaskwebhtml/images/addtask.png') }}" /> {{ 'site.nav.taskaddsome'|trans}} </a> </li>

         <!--         
         <li> <a href="{{ path('web_trash') }}" > <img src="{{ asset('bundles/devbierestaskwebhtml/images/trash.png')}}" /> {{ 'site.nav.trash'|trans}} </a> </li>
