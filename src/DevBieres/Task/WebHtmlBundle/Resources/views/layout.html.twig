       </ul>
       </nav>
    <header>
       {% block header %}
       <h1> 
         <a href="{{ path('web_home') }} " > {{ 'site.title'|trans }} </a>
       </h1>
       {% endblock %}
    </header>

    {% block page %}
    <div id="content" > 
      <h2> {% block content_title %} {% endblock %} </h2>
      {% block flash %}
      <div class="flash" >
          <ul>
          {% for flashMessage in app.session.flashbag.get('flash') %}
          <li> {{ flashMessage }} </li>
          {% endfor %}
      </div>
      {% endblock %}
      {% block content %}
      {% endblock %}
    </div>
    {% endblock %}

      <footer>
          <nav id="nav_footer" >
                <ul>
                  <li> <a href="mailto:thierry<at>lafamillebn<point>#<net>" > {{ 'site.nav.contact'|trans }}</a></li> 
                  <li> <a href="{{ path('web_apropos') }}" > {{ 'site.nav.about'|trans }}</a></li> 
                  <li> <a href="{{ path('web_user_preference_edit') }}" id="nav_preferences"  > <img src="{{ asset('bundles/devbierestaskwebhtml/images/user_preferences.png')}}" /> {{ 'site.nav.preference'|trans}} </a></li> 
                  <li> <a href="{{ path('web_user_destroy') }}" id="user_destroy" > <img src="{{ asset('bundles/devbierestaskwebhtml/images/user_destroy.png')}}" /> {{ 'site.nav.destroy'|trans}} </a></li> 
                </ul>
          </nav>
      {% block footer %}
      <div> Copyleft 2012 - thierry / devbieres / Licence BeerWare </div>
       {% endblock %}
       </footer>

    </body>
</html>

